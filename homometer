#!/usr/bin/env perl
use strict;
use warnings;
use LWP::Simple;

if (!$ARGV[0]) {
    print STDERR "Name missing\n";
    exit 1;
}

my $content = get('http://bongster.de/schwul-o-meter.php?action=calc&name='
    . $ARGV[0]) or die "Could not get site\n";

if ($content =~ /^<b>([0-9]{1,2}\.[0-9]{1,2}%)/m) {
    print "$1\n";
} else {
    print STDERR "Could not find percent\n";
}
